<Window x:Class="SimpleQuestion_Another_variant_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleQuestion_Another_variant_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450"
        Background="AliceBlue">
    <Canvas>
        <Button x:Name="ButtonYes" Content="YES" 
                 Width="50" Height="50"
                Click="ButtonYes_Click" MouseEnter="ButtonYes_MouseEnter" 
                Margin="300,260"
                Style="{StaticResource StyleButton}"/>

        <Button  x:Name="ButtonNo" Content="NO"
                 Width="50" Height="50"
                 MouseEnter="ButtonNo_MouseEnter" Click="ButtonNo_Click" 
                 Margin="100,260"
                 Style="{StaticResource StyleButton}"/>

        <TextBlock Text="Are you a clever?" 
                   HorizontalAlignment="Left" FontSize="20" 
                   Canvas.Left="150" Canvas.Top="25"/>

        <TextBlock x:Name="AnswerTextBlock" Text="" 
                   FontSize="20" 
                   Canvas.Left="125" Canvas.Top="122"/>
    </Canvas>
</Window>
